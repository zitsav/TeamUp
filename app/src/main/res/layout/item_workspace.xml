<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:padding="10dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="2dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/workspaceIconIv"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/workspaceNameTextView"
                android:layout_marginHorizontal="20dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/app_icon" />

            <TextView
                android:id="@+id/workspaceNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Workspace Name"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/button_background_color" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/dropdownMenu"
                android:src="@drawable/dots"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="20dp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/memberLayout"
                android:layout_below="@id/workspaceIconIv"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/circle_shape"
                    android:src="@drawable/user"
                    android:padding="5dp"
                    android:visibility="invisible"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/circle_shape"
                    android:src="@drawable/user"
                    android:padding="5dp"
                    android:visibility="invisible"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/circle_shape"
                    android:src="@drawable/user"
                    android:padding="5dp"
                    android:visibility="invisible"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/circle_shape"
                    android:src="@drawable/user"
                    android:padding="5dp"
                    android:visibility="invisible"
                    tools:visibility="visible"
                    android:scaleType="centerCrop"/>

            </FrameLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>